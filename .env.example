# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
ALLOWED_TELEGRAM_IDS=123456789,987654321

# Claude CLI Configuration
# Full path to Claude CLI executable
# If claude is in PATH, you can leave this empty or set to "claude"
CLAUDE_CODE_PATH=/home/tony/.nvm/versions/node/v22.20.0/bin/claude

# OpenRouter (Fallback when Claude is unavailable)
OPENROUTER_API_KEY=your_openrouter_key_here

# Working Directory
WORK_DIR=/home/tony/agenticgram_workspace
BROWSE_START_DIR=/home/tony

# Directory Navigation Security
ALLOWED_BASE_DIRS=/home/tony,/home,/opt,/srv
BLOCKED_DIRS=/etc,/sys,/proc,/root,/boot,/dev,/run,/tmp
MAX_DIRS_PER_PAGE=8

# Session Management
MAX_SESSION_AGE_HOURS=24
AUTO_CLEANUP_SESSIONS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/agenticgram/bot.log

# Permissions
PERMISSION_TIMEOUT_MINUTES=5
